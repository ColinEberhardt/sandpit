{
  "name": "sandpit",
  "version": "0.1.3",
  "description": "A playground for creative coding using JavaScript and the canvas element",
  "main": "dist/sandpit.js",
  "module": "dist/sandpit.es.js",
  "license": "MIT",
  "scripts": {
    "test": "react-scripts test --env=jsdom",
    "start": "cd site && npm run start && cd -",
    "serve": "npm run build && pushstate-server site/build",
    "prebuild:dist": "rm -rf dist/*",
    "build:dist": "rollup -c && rollup -c --environment PRODUCTION && NAMED=true rollup -c -i src/Sandpit.js",
    "prebuild:lib": "rm -rf lib/*",
    "build:lib": "babel --out-dir lib --ignore src/index.js src",
    "build:watch": "npm run build:lib -- --watch",
    "build:docs": "jsdoc --configure .jsdoc.json --verbose",
    "build:site": "cp -r dist site/public && cd site && npm run build && cd -",
    "build": "npm run build:lib && npm run build:dist && npm run build:docs && npm run build:site",
    "deploy": "npm run build && surge -p site/build -d sandpitjs.com",
    "postinstall": "node scripts/postinstall"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/superhighfives/sandpit.git"
  },
  "keywords": [
    "sketch",
    "creative",
    "canvas",
    "processing",
    "animation"
  ],
  "author": "Charlie Gleason (http://charliegleason.com/)",
  "dependencies": {
    "color": "^1.0.3",
    "dat.gui": "^0.6.1",
    "debounce": "^1.0.0",
    "gyronorm": "git://github.com/superhighfives/gyronorm.js.git",
    "queryfetch": "^1.2.1",
    "seedrandom": "^2.4.2",
    "stats.js": "^0.17.0",
    "victor": "^1.1.0",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "canvas": "^1.6.2",
    "chokidar": "^1.6.1",
    "jsdoc": "^3.4.3",
    "minami": "git://github.com/superhighfives/minami.git",
    "pushstate-server": "^2.1.0",
    "react-scripts": "0.8.5",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-inject": "^2.0.0",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-visualizer": "^0.2.0",
    "standard": "^8.6.0",
    "stringstream": "^0.0.5",
    "surge": "^0.18.0"
  }
}
